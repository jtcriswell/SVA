+
+void
+apic_isr_sva1 (unsigned int vector) {
+  unsigned int offset;
+  __asm__ __volatile__ ("bsrl %1, %0\n" : "=r" (offset) : "m" (lapic->isr1));
+  if (offset) {
+    lapic_handle_intr_sva (offset+(32*1));
+  }
+}
+
